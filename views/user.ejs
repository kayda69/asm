<!DOCTYPE html>
<html>
<head>
    <title>PolyLib</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <style>
        .navbar {
            width: 100%;
        }
        .row{
            width: 100%;
            margin-top: 20px;
            margin-left: 2px;
        }
        .ListMember{
            grid-area: ListMember;
            width: 100%;
            display: grid;
            grid-template-columns: 2fr 2fr 2fr 2fr 2fr 2fr  ;
            border-radius: 10px;
        }
        .itemMember{
            width: 200px;
            height: 340px;
            background-color: #e0dfdf;
            margin-bottom: 10px;
            border-radius: 10px;
        }
        .itemTextFullName{
            margin-left: 5px;
            font-weight: bold;
        }
        .imgMember{
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            width: 100%; height: 60%;
            object-fit: cover;margin-bottom: 5px
        }
        .itemText{
            margin-left: 5px;
        }
        #buttonDel{
            width: 90%;
            height: 40px;
            margin-left: 10px;
            margin-top: 10px;
        }
        #buttonDel:hover{
            background-color: orangered;
            color: white;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }
        
    </style>
</head>
<body class="container">
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a style="font-size: 20px; font-weight: bold" class="navbar-brand" href="/index">ComicCorner</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/user">Người dùng</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/author">Tác giả</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/comic">Truyện tranh</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="/" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      Tài khoản
                    </a>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="/">Đổi mật khẩu</a></li>
                      <li><a class="dropdown-item" href="/index/logout">Đăng xuất</a></li>
                    </ul>
                  </li>
            </ul>
        </div>
    </div>
</nav>
<div class="row">
    <div class="col-md-12" style="height: 600px;">
        <h5 style="margin-top: 10px;margin-bottom: 10px">Danh sách người dùng</h5>
        <table style="width: 100%; border-collapse: collapse;">
            <thead>
            <tr>
                <th>STT</th>
                <th>Image</th>
                <th>FullName</th>
                <th>Username</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                <th>Address</th>
                <th>Action</th>

            </tr>
            </thead>
            <tbody>
            <% var stt = 1%>
            <% dataUser.forEach((user) => { %>
                <tr style="border-bottom: 1px solid #ccc;">
                    <td><%= stt %></td>
                    <td>
                        <img style="width: 30px;height: 30px;" src="<%= user.image %>">
                    </td>
                    <td>
                        <%= user.fullName %>
                    </td>
                    <td>
                        <%= user.username %>
                    </td>
                    <td><%= user.email %></td>
                    <td> <%= user.phoneNumber %></td>
                    <td> <%= user.address %></td>
                    <td>
                        <button id="buttonDel" type="button" class="btn btn-warning" onclick="confirmDelete(<%= JSON.stringify(user)%>)">Delete</button>
                    </td>
                </tr>
                <% stt++ %>
            <% }) %>
            </tbody>
        </table>
    </div>
</div>

</body>
<script>

function confirmDelete(user) {
        const _id = user._id;
        var result = confirm("Bạn có chắc muốn xóa người dùng này không?");
        if (result) {
            window.location.href = "user/deleteUserOnWeb/?_id=" + _id;
        }
    }
    
</script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>
</html>
